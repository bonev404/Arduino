
int smokeA0 = A0;
int buzzer = 11;
float sensorValue;

void setup() {
  pinMode(buzzer,OUTPUT);
  pinMode(smokeA0,INPUT);
   Serial.begin(9600);
  Serial.println("Gas sensor warming up!");
  delay(20000); 
  noTone(buzzer);
  
}

void loop() {
  sensorValue = analogRead(smokeA0);
  if(sensorValue > 300)
  {
    Serial.print("Smoke detected!");
    tone(buzzer,1000,200);
  }
  else
  {
     Serial.print("Smoke  not detected!");
  
    noTone(buzzer);
   
  }
  delay(1000);
}
